<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/join_caro_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".update_infouser_pageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/updateinfo_back_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/arrowlefticon"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Chỉnh sửa trang cá nhân"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_border_radius_10_red"
            android:text="ĐĂNG XUẤT"
            android:textColor="#FBFBFB" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2DDDD" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Ảnh đại diện"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/addAvataButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="Chỉnh sửa"
                        android:textColor="@color/blue" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/avataContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avataImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/anlan" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2DDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="282dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Ảnh bìa"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:ignore="DuplicateIds"
                        tools:text="Ảnh bìa" />

                    <TextView
                        android:id="@+id/addAvataButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="Chỉnh sửa"
                        android:textColor="@color/blue"
                        tools:ignore="DuplicateIds" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avataImage"
                        android:layout_width="match_parent"
                        android:layout_height="207dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/anlan"
                        tools:ignore="DuplicateIds" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="#E2DDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="352dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <EditText
                        android:id="@+id/surname_input"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_input_login"
                        android:ems="10"
                        android:fontFamily="@font/alata"
                        android:hint="Họ"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="#4E4E4E"
                        android:textColorHint="#3A3A3A" />

                    <EditText
                        android:id="@+id/name_input"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_input_login"
                        android:ems="10"
                        android:fontFamily="@font/alata"
                        android:hint="Tên"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="#4E4E4E"
                        android:textColorHint="#3A3A3A" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_input_login"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:text="Ngày sinh"
                            android:textColor="#454545"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinDay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_input_login"
                    android:ems="10"
                    android:fontFamily="@font/alata"
                    android:hint="Số điện thoại"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="#4E4E4E"
                    android:textColorHint="#3A3A3A" />

                <EditText
                    android:id="@+id/location_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_input_login"
                    android:ems="10"
                    android:fontFamily="@font/alata"
                    android:hint="Địa chỉ"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="#4E4E4E"
                    android:textColorHint="#3A3A3A" />

                <EditText
                    android:id="@+id/job_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_input_login"
                    android:ems="10"
                    android:fontFamily="@font/alata"
                    android:hint="Công việc"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="#4E4E4E"
                    android:textColorHint="#3A3A3A" />

                <Button
                    android:id="@+id/save_info_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_btnlogin"
                    android:fontFamily="@font/alata"
                    android:text="Lưu"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>