<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_avt_user_coment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"
        android:background="@drawable/boder_radious_50"
        android:src="@drawable/avt_5"
        android:clipToOutline="true"
        android:contentDescription="Avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:background="@drawable/bg_comment"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_user_name_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tùng óc bò"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="7"
            android:text="Tớ là Tùng đần nè hihi"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2p"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:layout_gravity="bottom" />
</LinearLayout>
