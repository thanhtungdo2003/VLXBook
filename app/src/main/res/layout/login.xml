<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/custom_backgroundcolor"
    android:orientation="vertical"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/black"
            app:boxCollapsedPaddingTop="50dp"
            >

            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="380dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/custom_input_login"
                android:ems="10"
                android:fontFamily="@font/alata"
                android:gravity="center|left"
                android:hint="Số di động hoặc email"
                android:paddingLeft="10dp" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            app:hintTextColor="@color/black"
            >

            <EditText
                android:id="@+id/passInput"
                android:layout_width="380dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input_login"
                android:ems="10"
                android:fontFamily="@font/alata"
                android:gravity="center|left"
                android:inputType="text"
                android:paddingLeft="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_btnlogin"
        android:fontFamily="@font/alata"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="Bạn quên mật khẩu ư?"
        android:textColor="#494747" />

    <Button
        android:id="@+id/btnNextToSignup"
        android:layout_width="380dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_btnsignup"
        android:fontFamily="@font/alata"
        android:text="Tạo tài khoản mới"
        android:textColor="#1877F2"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:gravity="center"
        android:text="Mebook"
        android:textSize="20sp" />


</LinearLayout>